@page

@using IdentityApp.Authorization
@using IdentityApp.Models
@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService AuthorizationService

@model IdentityApp.Pages.Invoices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].CountOfVacationsDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].VacationsMonth)
            </th>
  
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].VacationsOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vacation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountOfVacationsDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationsMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationsOwner)
            </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VacationsId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VacationsId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VacationsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
